<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_margin="6dp"
    android:elevation="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/btnPlay"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_play"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@color/app_third_text"
            android:clickable="true"
            android:layout_marginRight="20dp"
            />

        <ImageView
            android:id="@+id/btnPause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/btnPlay"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:src="@drawable/ic_pause"
            app:tint="@color/app_third_text" />

        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/c01"
            android:elevation="0dp"
            />
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivPic"
            android:text="OJOS ASI"
            android:textColor="@color/app_third_text"
            android:textSize="14dp"
            android:fontFamily="@font/chakra_petch_medium"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/tvComposer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivPic"
            android:layout_below="@+id/tvName"
            android:text="OJOS ASI"
            android:textStyle="bold"
            android:textColor="@color/app_action_hover"
            android:textSize="18dp"
            android:fontFamily="@font/chakra_petch_medium"
            android:textAllCaps="false"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>