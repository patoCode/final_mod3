<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/teal_700"
    app:cardCornerRadius="@dimen/corner_radius_menu"
    android:layout_margin="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/pl01"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/tvPriority"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="50dp"
            android:gravity="center"
            android:layout_alignStart="@+id/ivPic"
            android:textColor="@color/app_secondary_text"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/ivPic"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="4dp"
            >
            <TextView
                android:id="@+id/tvName"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="PRUEBA DE TEXTO"
                android:textColor="@color/app_primary_text"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:maxLines="1"
                />
            <Button
                android:id="@+id/actionEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_edit"
                app:backgroundTint="@color/app_btn_bg"
                android:text="editar"
                android:layout_weight="1"
                />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>